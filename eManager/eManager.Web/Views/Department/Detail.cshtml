@Html.ActionLink("Add an employee", "Create", "Employee", new { DepartmentId = @Model.Id }, null)

<p>
    <table>
        <tr>
            <th>Name</th>
            <th>Id</th>
            <th>Date Hired</th>
        </tr>
        @foreach (var employee in Model.Employees)
        {
             <tr>
                <td>@employee.Name</td>
                <td>@employee.Id</td>
                <td>@employee.HireDate</td>
                 <td>
                     @Html.ActionLink("Detail", "Detail", "Employee",  new { id = employee.Id}, null) | 
                     @Html.ActionLink("Edit", "Edit", "Employee", new { id = employee.Id}, null) | 
                 </td>
            </tr>
         }
    </table>
</p>

<p style="font-size:12px">
    @Html.ActionLink("Back to All Departments", "Departments", "Data")
</p>